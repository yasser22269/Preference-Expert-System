<Window x:Class="SystemEkspercki.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Preference Expert System" Height="250" Width="525" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"></RowDefinition>
			<RowDefinition Height="*"></RowDefinition>
			<RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"></ColumnDefinition>
			<ColumnDefinition Width="*"></ColumnDefinition>
		</Grid.ColumnDefinitions>

		<StackPanel x:Name="QuestionStackPnl" Margin="5" Orientation="Vertical" Grid.Row="0" Grid.ColumnSpan="2" Visibility="Hidden"/>

		<Button Margin="5" Padding="3" MinHeight="80" MinWidth="200" Name="StartBtn" Content="Start" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="2" Grid.RowSpan="3" FontSize="40" Click="StartBtn_Click"></Button>

		<Button Margin="5" Padding="3" MinHeight="40" MinWidth="100" Name="NextBtn" Content="Dalej" HorizontalAlignment="Right" Grid.Column="1" Grid.Row="2" Visibility="Hidden" Click="NextBtn_Click"></Button>
	</Grid>
</Window>
